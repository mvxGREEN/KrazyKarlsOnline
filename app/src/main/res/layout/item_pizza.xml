<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bkg_menu_item"
    android:gravity="start|center_vertical"
    android:layout_marginTop="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp"
    android:padding="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_pizza_name"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/permanent_marker"/>

        <TextView
            android:id="@+id/toppings_pizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:text="@string/example_pizza_toppings"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/colorVeryLightGrey"
            android:ellipsize="end"
            android:maxLines="1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/icon_pizza"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/cont_desc_pizza_icon"/>

</LinearLayout>